<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Language Model</title>
</head>

<body>
    <h1>Hello, welcome to the Language Learning Model</h1>

    <h3>New User</h3>
    <form method="POST" action="/user">
        <input type="text" placeholder="Enter Name of User" name="username" autocomplete="off" required>
        <input type="submit" value="Add User">
    </form>

    <h3>New Language</h3>
    <form method="POST" action="/language">
        <input type="text" placeholder="Enter Name of Language" name="language" autocomplete="off" required>
        <input type="submit" value="Add Language">
    </form>

    <h3>New Fluencies</h3>
    <form method="POST" action="/fluency">
        <input type="text" placeholder="Enter Fluency Level" name="fluency" autocomplete="off" required>
        <input type="text" placeholder="Enter User Id" name="userId" autocomplete="off" required>
        <input type="text" placeholder="Enter Language Id" name="languageId" autocomplete="off" required>
        <input type="submit" value="Add Fluencies">
    </form>

    <h3>Users</h3>
    <table>
        <tr>
            <td>Id</td>
            <td>User</td>
        </tr>
        <%people.forEach(person => {%>
        <tr>
            <td>
                <%=person.id%>
            </td>
            <td>
                <%=person.name%>
            </td>
        </tr>

        <%})%>
    </table>

    <h3>Languages</h3>
    <table>
        <tr>
            <td>Id</td>
            <td>Language</td>
        </tr>
        <%languages.forEach(language => {%>
        <tr>
            <td>
                <%=language.id%>
            </td>
            <td>
                <%=language.name%>
            </td>
        </tr>

        <%})%>
    </table>

    <h3>Fluencies</h3>
    <table>
        <tr>
            <td>User Id</td>
            <td>User Name</td>
            <td>Language Id</td>
            <td>Language Name</td>
            <td>Level</td>
        </tr>
        <%fluencies.forEach(fluency => {%>
        <tr>
            <td>
                <%=fluency.userId%>
            </td>
            <td>
                <%=fluency.username%>
            </td>
            <td>
                <%=fluency.languageId%>
            </td>
            <td>
                <%=fluency.languagename%>
            </td>
            <td>
                <%=fluency.level%>
            </td>
        </tr>

        <%})%>
    </table>


</body>

</html>